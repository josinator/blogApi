{% extends 'base.html.twig' %}

{% block title %}Hello GetPostDetailController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ post.title }}</h1>

    <div class="post-body">
        {{ post.description }}
    </div>
    <div class="author">
        <a href="{{ url('app_get_author_detail', { 'id' : post.authorId}) }}">{{ post.author }}</a>
    </div>
</div>
{% endblock %}
